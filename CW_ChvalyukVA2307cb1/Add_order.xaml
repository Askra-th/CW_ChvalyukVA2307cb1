<Window x:Class="CW_ChvalyukVA2307cb1.Add_order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW_ChvalyukVA2307cb1"
        mc:Ignorable="d"
        Title="Add_order" Height="450" Width="800">
    <Grid Background="Coral">
        <StackPanel>
            <TextBlock Text="Описание" TextAlignment="Center" FontSize="25" Background="coral"/>
            <TextBox Background="Gray" FontSize="20" TextAlignment="Center" Foreground="Cyan" x:Name="Description"></TextBox>
            <TextBlock Text="Подробное описание " TextAlignment="Center" FontSize="25" Background="coral"/>
            <TextBox Background="Gray" FontSize="20" TextAlignment="Center" Foreground="Cyan" x:Name="Description1" TextWrapping="Wrap"></TextBox>
            <TextBlock Text="Статус" TextAlignment="Center" FontSize="25" Background="coral"/>
            <TextBox Background="Gray" FontSize="20" TextAlignment="Center" Foreground="Cyan" x:Name="Status"></TextBox>
            <TextBlock Text="Исполнитель заявки" TextAlignment="Center" FontSize="25" Background="coral"/>
            <TextBox Background="Gray" FontSize="20" TextAlignment="Center" Foreground="Cyan" x:Name="U2"></TextBox>
            <TextBlock Text="тип" TextAlignment="Center" FontSize="25" Background="coral"/>
            <TextBox Background="Gray" FontSize="20" TextAlignment="Center" Foreground="Cyan" x:Name="Type"></TextBox>
            <TextBlock Height="30"/>
            <Button Content="добавить" Height="40" Width="200"  x:Name="Add" Click="Add_Click"/>


        </StackPanel>
    </Grid>
</Window>
