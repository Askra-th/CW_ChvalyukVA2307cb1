<Window x:Class="CW_ChvalyukVA2307cb1.registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW_ChvalyukVA2307cb1"
        mc:Ignorable="d"
        Title="registration" Height="450" Width="800">
    <Grid Background="Coral">
        <StackPanel>
            <TextBlock TextAlignment="Center" FontSize="30" Text="ЛОГИН"/>
            <TextBox x:Name="Login" Background="gray"  FontSize="20"></TextBox>
            <TextBlock Height="20"></TextBlock>
            <TextBlock TextAlignment="Center" FontSize="30" Text="ПАРОЛЬ"/>
            <PasswordBox x:Name="Passwordbox" Background="Gray" FontSize="20" PasswordChar="*" />
            <TextBlock Text="ФИО" FontSize="30" TextAlignment="Center" Height="50"></TextBlock>
            <TextBox x:Name="FIO" Background="gray"  FontSize="20"></TextBox>
            <TextBlock Text="Номер телефона" FontSize="30" TextAlignment="Center" Height="50"></TextBlock>
            <TextBox x:Name="number" Background="gray"  FontSize="20"></TextBox>
            <TextBlock Height="20"></TextBlock>
            <Button x:Name="Add_User" Height="50" Width="200" Content="Добавить пользователя" Click="Add_User_Click"></Button>
        
        </StackPanel>
    </Grid>
</Window>
