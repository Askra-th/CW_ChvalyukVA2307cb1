<Window x:Class="CW_ChvalyukVA2307cb1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW_ChvalyukVA2307cb1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Coral">
        <DockPanel>
            <ComboBox DockPanel.Dock="Right" Width="600"  x:Name="lIST_ORDER"></ComboBox>
            <Button DockPanel.Dock="Bottom" Width="150" Height="60" Content="Добавить заявку" x:Name="add_ord" Click="Add_ord_Click"/>
            <Button DockPanel.Dock="Left" Width="150" Height="60" Content="Редактировать статус" x:Name="editing" Click="editing_Click"/>

        </DockPanel>
    </Grid>
</Window>
